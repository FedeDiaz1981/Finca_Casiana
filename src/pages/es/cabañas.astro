---
import Base from "../../layouts/Base.astro";
import { getDict, type Locale } from "../../i18n/config";
import LanguageSwitcher from "../../components/LanguageSwitcher.astro";

import E_01 from '../../../public/images/E_01 .jpg'
import E_02 from '../../../public/images/E_02 .jpg'
import E_03 from '../../../public/images/E_03 .jpg'

import I_01 from '../../../public/images/I_01 .jpg'
import I_02 from '../../../public/images/I_02 .jpg'
import I_03 from '../../../public/images/I_03 .jpg'

import P_01 from '../../../public/images/P_01 .jpg'
import P_02 from '../../../public/images/P_02 .jpg'
import P_03 from '../../../public/images/P_03 .jpg'

import Pl_01 from '../../../public/images/Pl_01 .jpg'
import Pl_02 from '../../../public/images/Pl_02 .jpg'
import Pl_03 from '../../../public/images/Pl_03 .jpg'

const { lang } = Astro.params as { lang: Locale };
const t = getDict(lang);
//@ts-ignore
import CarouselGallery from "../../components/CarouselGallery.astro";
import type { ImageItem, GalleryData } from "../../types/gallery"; // si separaste los tipos

const Interiores: ImageItem[] = [
  {
    imagen: I_01.src,
    categoria: "Interiores",
    caption: "1",
    capacity: 6,
    model: "Familiar",
  },
  {
    imagen:I_02.src,
    categoria: "Interiores",
    caption: "2",
    capacity: 3,
    model: "Confort",
  },
  {
    imagen: I_03.src,
    categoria: "Interiores",
    caption: "3",
    capacity: 3,
    model: "Confort",
  },
];

const Exteriores: ImageItem[] = [
  {
    imagen: E_01.src,
    categoria: "Exteriores",
    caption: "2",
    capacity: 3,
    model: "Confort",
  },
  {
    imagen: E_02.src,
    categoria: "Exteriores",
    caption: "1",
    capacity: 6,
    model: "Familiar",
  },
  {
    imagen: E_03.src,
    categoria: "Exteriores",
    caption: "3",
    capacity: 3,
    model: "Confort",
  },
];

const Parque: ImageItem[] = [
  {
    imagen: P_01.src,
    categoria: "Parque",
    caption: "",
  },
  {
    imagen: P_02.src,
    categoria: "Parque",
    caption: "",
  },
  {
    imagen: P_03.src,
    categoria: "Parque",
    caption: "1",
  },
];

const Pileta: ImageItem[] = [
  {
    imagen: Pl_01.src,
    categoria: "Parque",
    caption: "",
  },
  {
    imagen: Pl_02.src,
    categoria: "Parque",
    caption: "",
  },
  {
    imagen: Pl_03.src,
    categoria: "Parque",
    caption: "",
  },
];

const data: Partial<GalleryData> = { Interiores, Exteriores, Parque, Pileta };
---

<Base lang={lang} title={t.header.title}>
  <main class="container mx-auto p-6">
    <CarouselGallery
      data={data}
      groupBy="category"
      reserveUrl="reservas?cabana={{id}}"
      reserveTarget="_self"
    />

    <section class="my-12 px-4">
      <div class="max-w-5xl mx-auto">
        <!-- Encabezado -->
        <header class="text-center">
          <h2 class="text-3xl md:text-4xl font-semibold text-stone-900">
            Cabañas equipadas, listas todo el año
          </h2>
          <p class="mt-3 text-stone-600 text-lg">
            En Finca Casiana te recibimos en un entorno natural, con el confort
            y la atención que esperás.
          </p>
        </header>

        <!-- Features -->
        <!-- Amenities-style -->
        <div class="mt-10 grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-10">
          <!-- Naturaleza -->
          <article class="grid grid-cols-[28px_1fr] items-start gap-3">
            <span class="text-stone-400 mt-1">
              <!-- árbol -->
              <svg
                class="w-6 h-6"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
              >
                <path d="M12 2v7m0 0-3-3m3 3 3-3M6 22h12M12 9v13"></path>
              </svg>
            </span>
            <div>
              <h3 class="font-semibold text-stone-900">
                Rodeadas de naturaleza y tranquilidad
              </h3>
              <p class="mt-1 text-stone-600 leading-relaxed">
                Descanso real, lejos del ruido.
              </p>
            </div>
          </article>

          <!-- Comodidades -->
          <article class="grid grid-cols-[28px_1fr] items-start gap-3">
            <span class="text-stone-400 mt-1">
              <!-- cama -->
              <svg
                class="w-6 h-6"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
              >
                <path d="M3 7h18v8H3zM3 15v4M21 15v4"></path>
              </svg>
            </span>
            <div>
              <h3 class="font-semibold text-stone-900">Comodidades</h3>
              <p class="mt-1 text-stone-600 leading-relaxed">
                Aire acondicionado y calefacción; cocina equipada y ropa de
                cama; Wi-Fi gratuito; Smart TV con antena satelital.
              </p>
            </div>
          </article>

          <!-- Accesibilidad -->
          <article class="grid grid-cols-[28px_1fr] items-start gap-3">
            <span class="text-stone-400 mt-1">
              <!-- accesibilidad -->
              <svg
                class="w-6 h-6"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
              >
                <circle cx="12" cy="4" r="2"></circle><path
                  d="M6 8h12M12 6v5m-6-1 3 10m6 0 3-10"></path>
              </svg>
            </span>
            <div>
              <h3 class="font-semibold text-stone-900">Accesible</h3>
              <p class="mt-1 text-stone-600 leading-relaxed">
                Adaptado para personas con movilidad reducida.
              </p>
            </div>
          </article>

          <!-- Pet Friendly -->
          <article class="grid grid-cols-[28px_1fr] items-start gap-3">
            <span class="text-stone-400 mt-1">
              <!-- huella -->
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <circle cx="6.5" cy="8.5" r="2.2"></circle><circle
                  cx="12"
                  cy="6.5"
                  r="2.2"></circle>
                <circle cx="17.5" cy="8.5" r="2.2"></circle><path
                  d="M12 12c3.6 0 6.5 2.4 6.5 5.3 0 1.5-1.4 2.7-3.1 2.7H8.6C6.9 20 5.5 18.8 5.5 17.3 5.5 14.4 8.4 12 12 12z"
                ></path>
              </svg>
            </span>
            <div>
              <h3 class="font-semibold text-stone-900">
                Alojamiento pet-friendly
              </h3>
              <p class="mt-1 text-stone-600 leading-relaxed">
                Tus mascotas son bienvenidas.
              </p>
            </div>
          </article>
        </div>

        <h2
          class="mt-12 text-base md:text-2xl font-semibold text-stone-900 uppercase"
        >
          CABAÑAS CONFORT PARA 3 PERSONAS
        </h2>

        <CarouselGallery data={data} intervalMs={3800} groupBy="cabin" />

        <h2
          class="mt-12 text-base md:text-2xl font-semibold text-stone-900 uppercase"
        >
          CABAÑA FAMILIAR PARA 5 O 6 PERSONAS
        </h2>

        <CarouselGallery data={data} intervalMs={3800} groupBy="cabin" />

        <div class="my-12 grid gap-3 md:grid-cols-3">
          <div class="flex items-center gap-3">
            <span class="text-emerald-600">✅</span>
            <span class="text-stone-700">Reservas online</span>
          </div>
          <div class="flex items-center gap-3">
            <span class="text-emerald-600">✅</span>
            <span class="text-stone-700"
              >Pago en efectivo o por transferencia</span
            >
          </div>
          <div class="flex items-center gap-3">
            <span class="text-emerald-600">✅</span>
            <span class="text-stone-700"
              >Atención directa por WhatsApp para consultas</span
            >
          </div>
        </div>

        <!-- CTA / Pagos / Contacto -->
        <div class="mt-10 grid gap-4 md:grid-cols-3 items-start">
          <p class="md:col-span-2 text-stone-700 text-lg">
            Consultá la disponibilidad en tiempo real y reservá en simples
            pasos.
          </p>
          <a
            href="/es/reservas"
            class="inline-flex items-center justify-center rounded-xl px-5 py-3 font-semibold text-white"
            style="background:#C76B4E"
          >
            Ver disponibilidad
          </a>
        </div>
      </div>
    </section>
  </main></Base
>
