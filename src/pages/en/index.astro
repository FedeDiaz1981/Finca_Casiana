---
import Base from "../../layouts/Base.astro";
import { getDict, type Locale } from "../../i18n/config";
import LanguageSwitcher from "../../components/LanguageSwitcher.astro";
import { imagesIn, imageItemsIn } from '../../lib/gallery-data';

const { lang } = Astro.params as { lang: Locale };
const t = getDict(lang);

import HeroCarousel from "../../components/HeroCarousel.astro";

import MapaTuristico from "../../components/MapaTuristico.astro";

import logo from "../../../public/Logo-03.png";

const items = imageItemsIn("Img_Hero");

const slides = items.map(i => ({
  src: i.imagen,
  alt: i.alt ?? i.caption ?? i.categoria,
  width: i.width,
  height: i.height,
  caption: i.caption,
  // si tu Img admite extras:
  capacity: i.capacity,
  model: i.model,
}));

---

<Base lang={lang} title={t.header.title}>
  <HeroCarousel
    images={slides}
    locale="es"
    autoplay={true}
    intervalMs={4500}
    aspectRatio="4/1"
    maxHeightPx={560}
  />
  <main class="container mx-auto p-6">
    <!-- <HeroCarousel youtubeUrl="https://youtu.be/l8QO0xbI9Jk" />
     <HeroCarousel  images={slides} locale="es" autoplay={true} intervalMs={4500}/> -->

    <section class="mt-12 px-4 mb-12 pb-12">
      <div class="max-w-3xl mx-auto text-center">
        <h3
          class="text-2xl font-semibold uppercase tracking-widest text-stone-500 mx-[auto] mb-4"
        >
          welcome to
        </h3>

        <img
          class="w-[25rem] mx-[auto]"
          src={logo.src}
          alt="logo finca Casiana"
        />

        <div
          class="mt-14 space-y-4 text-base md:text-xl leading-relaxed text-stone-600"
        >
          <p>
            We are a family estate located at the eastern entrance to the city
            of San Juan. A space designed for relaxation, connection with
            nature, and the creation of unforgettable moments.
          </p>
          <p>
            Our natural surroundings, personalized attention, and well-equipped
            facilities make Finca Casiana the ideal place for families, couples,
            and groups looking to disconnect from the hustle and bustle and
            reconnect with what's essential.
          </p>
          <p>
            We seek to provide a space where visitors can connect with nature,
            where every visitor can enjoy an authentic, safe, and comfortable
            experience. We focus on slow tourism, hospitality, and attention to
            every detail.
          </p>
        </div>

        <div class="mt-10">
          <h3 class="text-4xl font-semibold text-stone-900">Vision</h3>
          <div
            class="mx-auto mt-2 h-1 w-16 rounded-full"
            style="background:#C76B4E;"
          >
          </div>
          <p class="mt-8 text-base md:text-xl leading-relaxed text-stone-600">
            To position ourselves as a prominent destination in San Juan for
            those seeking tranquility, nature, and quality service. We aspire to
            be a benchmark in rural tourism and special events in the region.
          </p>
        </div>
      </div>
      <div class="mt-[8em]">
        <MapaTuristico
          fijo={{ lat: -31.555666223254082, lng: -68.48057388609342 }}
          locale="en"
          i18n={{ title: "Location" }}
        />
      </div>
      <div class="mt-10 grid gap-4 md:grid-cols-3 items-start md:items-center">
        <p class="md:col-span-2 text-stone-700 text-lg md:text-end md:pr-16">
          Check availability in real time and book in simple steps.
        </p>
        <a
          href="/es/reservas"
          class="inline-flex items-center justify-center rounded-xl px-5 py-3 font-semibold text-white w-80"
          style="background:#C76B4E"
        >
          See availability
        </a>
      </div>
    </section>
  </main>
   <style is:global>
    /* romper contenedores de layout si hace falta */
    .hero {
      inline-size: 100vw;
      margin-inline: calc(50% - 50vw);
      max-inline-size: 100vw;
    }
    :root,
    body {
      overflow-x: clip;
    } /* evita scroll horizontal */
    /* empuje del contenido por header fijo */
    .push {
      margin-top: var(--header-h, 72px);
    }
  </style>
</Base>
